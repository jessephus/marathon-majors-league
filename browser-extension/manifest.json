{
  "manifest_version": 3,
  "name": "Fantasy Marathon Live Results",
  "version": "1.0.0",
  "description": "Import live race results from NYRR leaderboard to Fantasy Marathon",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "https://liveresults.nyrr.org/*",
    "https://app.rtrt.me/*",
    "http://localhost:3000/*",
    "https://marathon-majors-league.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fantasy Marathon - Import Results"
  },
  "content_scripts": [
    {
      "matches": [
        "https://liveresults.nyrr.org/*",
        "https://app.rtrt.me/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
